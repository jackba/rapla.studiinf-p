<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.BindQRBox{
		position: absolute;
		left: 5vw;
		right: 5vw;
		width: 90vw;
		height: 12vh;
		background: #ffffff;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
		overflow:hidden;
		font-size:1vh;
		border: solid 0.25em #000000;
		padding:1vh;
		-moz-box-shadow: inset 0 0 0.25em 0.25em #858f95;
		-webkit-box-shadow: inset 0 0 0.25em 0.25em#858f95;
		box-shadow: inset 0 0 0.25em 0.25em #858f95;
	}
	.qrCode{
		width: 10vh;
		height: 10vh;
		float:right;
	}
	.qrCode img{
		width: 10vh;
		height: 10vh;
		padding:4px;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
	}
	.scanMeIcon{
		width: 10vh;
		height: 10vh;
		float:right;
	}
	.qrLabel{
		font-size: 2em;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.BindQRBox}">
		<div class="{style.qrCode}" ui:field="qrCode"></div>
		<img class="{style.scanMeIcon}" src="" ui:field="scanMeIcon" alt=""/>
		<p class="{style.qrLabel}" ui:field="qrLabel"></p>
	</g:HTMLPanel>
</ui:UiBinder> 