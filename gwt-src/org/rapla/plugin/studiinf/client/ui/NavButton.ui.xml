<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.rapla.plugin.studiinf.client.ui.NavButton.NavButtonStyle">
	.navigationButton{
		position:relative;
		display: inline-block;
		background: #aeb4b8;
		border: solid 1px #000000;
		padding:0;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
		overflow:hidden;
		font-size:1vh;
		height: 5em;
	}
	.icon{
		position: absolute;
		height: 2em;
		width: 2em;
		top: 0px;
		left: 2em;
		background:#ffffff;
		color: #e2001a;
		line-height: 2em;
		font-size: 2.5em;
		font-weight: bold;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
		text-align:center;
	}
	.icon span{
		font-size: 1.5em;
		vertical-align:middle;
		position: relative;
		top: -0.05em;
	}
	.number{
		position: absolute;
		height: 2em;
		width: 2em;
		top: 0px;
		left: 0px;
		border-right: solid 0.2em #ffffff;
		background: #5c6971;
		color: #ffffff;
		line-height: 2em;
		font-size: 2.5em;
		font-weight: bold;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
	}
	.text{
		display:inline-block;
		font-size: 2em;
		height:2.5em;
		margin-left:5em;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
		padding:0.5em;
		text-align:left;
		
	}
	.twoLines{
		font-size: 1em;
		height:5em;
		margin-left:10em;
		padding:1em;
	}
	.shadow{
		position:absolute;
		top:0;
		left:0;

		webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
		-moz-box-sizing: border-box;    /* Firefox, other Gecko */
		box-sizing: border-box;         /* Opera/IE 8+ */
		-moz-box-shadow: inset 0 0 1px 1px #000000;
		-webkit-box-shadow: inset 0 0 1px 1px#000000;
		box-shadow: inset 0 0 1px 1px #000000;
		width:100%;
		height:100%;
	}
	.navigationButton:hover{
		background:#aeb4b8;
	}
	.navigationButton:hover .icon{
		background:	#d6dadc;
	}
	.navigationButton:hover .number{
		background:	#000000;
	}
	.navigationButton:hover .shadow{
		-moz-box-shadow: inset 0 0 0.5em 0.5em #858f95;
		-webkit-box-shadow: inset 0 0 0.5em 0.5em #858f95;
		box-shadow: inset 0 0 0.5em 0.5em #5c6971;
	}
	.navigationButton[disabled]:hover{
		background:#aeb4b8;
	}
	.navigationButton[disabled]:hover .icon{
		background:	#ffffff;
	}
	.navigationButton[disabled]:hover .number{
		background:	#5c6971;
	}
	.navigationButton[disabled]:hover .shadow{
		-moz-box-shadow: inset 0 0 1px 1px #000000;
		-webkit-box-shadow: inset 0 0 1px 1px#000000;
		box-shadow: inset 0 0 1px 1px #000000;
	}



	.icon:empty{
		display:none;
	}
	.icon:empty+.text{
		margin-left:2.5em;
	}.icon:empty+.text.twoLines{
		margin-left:5em;
	}
	.number:empty{
		display:none;
	}
	.number:empty+.icon{
		left: 0;
	}
	.number:empty+.icon+.text{
		margin-left:2.5em;
	}
	.number:empty+.icon:empty+.text{
		margin-left:0;
	}
	.text:empty{
		padding:0;
		width:0;
		
	}
	.navigationButton[disabled] .icon{
		color: #aeb4b8;
	}
	.navigationButton[disabled] .text{
		color:	#5c6971;
	}
	.tile{
		height: 10em;
		width:44vw;
		margin: 1vw;
	}
	
	</ui:style>
	<g:Button styleName="{style.navigationButton}" ui:field="button">
		    <span class="{style.number}" ui:field="number"></span>
		    <span class="{style.icon}" ui:field="icon"></span>
		    <span class="{style.text}" ui:field="textLabel"></span>
		    <div class="{style.shadow}"></div>
	</g:Button>
</ui:UiBinder> 